<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <!-- Spring Boot 기본 설정을 불러와서 사용합니다 -->
    <include resource="org/springframework/boot/logging/logback/base.xml"/>

    <!-- Spring 환경 변수로부터 Slack Webhook URL을 가져옵니다 -->
    <springProperty scope="context" name="SLACK_WEBHOOK_URL" source="slack.webhook-url"/>

    <!-- 로그 파일이 저장될 경로 -->
    <property name="LOG_PATH" value="logs"/>

    <!-- 날짜 + 용량 기반으로 로그 파일을 관리하는 Appender 설정 -->
    <appender name="ROLLING_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <!-- 현재 로그는 항상 이 파일에 기록 -->
        <file>${LOG_PATH}/smarter-store.log</file>
        <encoder>
            <!-- 로그 패턴은 Spring Boot 기본 패턴을 따릅니다 -->
            <pattern>${FILE_LOG_PATTERN}</pattern>
        </encoder>

        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <fileNamePattern>${LOG_PATH}/smarter-store-%d{yyyy-MM-dd}.%i.log</fileNamePattern>
            <maxHistory>30</maxHistory>
            <maxFileSize>10MB</maxFileSize>
            <totalSizeCap>10GB</totalSizeCap>
        </rollingPolicy>
    </appender>

    <!-- Slack Appender 정의 -->
    <appender name="SLACK" class="com.github.maricn.logback.SlackAppender">
        <webhookUri>${SLACK_WEBHOOK_URL}</webhookUri>
        <layout class="ch.qos.logback.classic.PatternLayout">
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </layout>
        <username>SmarterStore-Error-Bot</username>
        <iconEmoji>:ghost:</iconEmoji>
        <colorTheme>BRIGHT</colorTheme>
        <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
            <level>ERROR</level>
        </filter>
    </appender>

    <!-- 비동기 Slack Appender 정의 -->
    <appender name="ASYNC_SLACK" class="ch.qos.logback.classic.AsyncAppender">
        <appender-ref ref="SLACK"/>
        <queueSize>500</queueSize>
        <discardingThreshold>0</discardingThreshold>
        <includeCallerData>false</includeCallerData>
        <maxFlushTime>1000</maxFlushTime>
    </appender>

    <!-- 루트 로거 설정 -->
    <root level="INFO">
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="ROLLING_FILE"/>
        
        <!-- prod 프로파일에서만 Slack 알림 활성화 -->
        <springProfile name="prod">
            <appender-ref ref="ASYNC_SLACK"/>
        </springProfile>
    </root>

    <!-- 우리 프로젝트의 로그 레벨은 DEBUG로 설정 -->
    <logger name="com.github.copyinaction" level="DEBUG"/>

</configuration>
